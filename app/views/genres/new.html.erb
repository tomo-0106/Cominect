<div class="container my-5">
  <% if @genre.errors.any? %>
     <font size="3" color="red">入力失敗しました。入力事項を確認してください</font>
　　<% end %>

  <div class="row mt-5">

    <div class="offset-sm-1 col-sm-4">

      <div class="form-wrap border rounded p-5">
        <div class="row d-flex justify-content-center">
            <strong>新規ジャンル登録</strong>
        </div>

        <%= form_with model: @genre, local:true do |f| %>

        <div class="form-group">
            <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="row">
            <%= f.submit "追加", class: "btn btn-primary mt-3 mx-auto" %>
        </div>

        <% end %>
      </div>
    </div>


  <div class="offset-sm-1 col-sm-5">

    <table class="table table-hover text-center">
      <thead>
        <tr>
          <th>ジャンル</th>
        </tr>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td>
            <%= link_to "削除する", genre_path(genre), method: :delete, class: "btn btn-primary btn-sm" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  </div>
</div>

